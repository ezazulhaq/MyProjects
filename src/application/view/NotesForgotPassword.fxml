<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" styleClass="background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.NotesForgotPasswordController">
   <children>
      <VBox layoutX="44.0" layoutY="124.0" prefHeight="352.0" prefWidth="313.0" spacing="20.0">
         <children>
            <Label fx:id="errorMsg" alignment="CENTER" prefHeight="35.0" prefWidth="313.0" textAlignment="CENTER" textFill="WHITE" />
            <TextField fx:id="userName" prefHeight="46.0" prefWidth="313.0" promptText="User Name" />
            <PasswordField fx:id="newpassword" prefHeight="50.0" promptText="New Password" />
            <Button fx:id="changePass" mnemonicParsing="false" onAction="#handleForgotPass" prefHeight="50.0" prefWidth="313.0" text="CHANGE PASSWORD">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="loginscene" mnemonicParsing="false" onAction="#handleCancel" prefHeight="50.0" prefWidth="313.0" text="CANCEL">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
