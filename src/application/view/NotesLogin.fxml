<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" styleClass="background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.NotesLoginController">
   <children>
      <VBox layoutX="44.0" layoutY="124.0" prefHeight="352.0" prefWidth="313.0" spacing="20.0">
         <children>
            <Label fx:id="errorMsg" alignment="CENTER" prefHeight="35.0" prefWidth="313.0" textAlignment="CENTER" textFill="WHITE" />
            <TextField fx:id="userName" prefHeight="46.0" prefWidth="313.0" promptText="User Name" />
            <PasswordField fx:id="password" prefHeight="50.0" promptText="Password" />
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#handleLogin" prefHeight="50.0" prefWidth="313.0" text="LOG IN">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </Button>
            <Hyperlink fx:id="newUser" alignment="CENTER" contentDisplay="CENTER" onAction="#handleCreateNewUser" prefHeight="23.0" prefWidth="323.0" text="Create New User?" textAlignment="CENTER" underline="true" />
            <Hyperlink fx:id="forgotPass" alignment="CENTER" contentDisplay="CENTER" onAction="#handleForgotPass" prefHeight="23.0" prefWidth="349.0" text="Forgot Password?" underline="true" />
         </children>
      </VBox>
   </children>
</AnchorPane>
